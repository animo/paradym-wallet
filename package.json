	"pnpm": {
		"overrides": {
			"react-native-fs": "catalog:",
			"@credo-ts/core>@sd-jwt/core": "0.18.2-next.0",
			"@credo-ts/core>@sd-jwt/types": "0.18.2-next.0",
			"@credo-ts/core>@sd-jwt/utils": "0.18.2-next.0",
			"@credo-ts/core>@sd-jwt/sd-jwt-vc": "0.18.2-next.0",
