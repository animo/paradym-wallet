{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2020",
		"declaration": true,
		"sourceMap": true,
		"strict": true,
		"noEmitOnError": true,
		"lib": ["ESNext"],
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"baseUrl": ".",
		"types": ["png"],
		"skipLibCheck": true,
		"jsx": "react-native",
		"typeRoots": ["./types"],
		"paths": {
			"@package/*": ["./packages/*/src"],
			"@package/agent/*": ["./packages/agent/src/*"],
			"@package/ui/*": ["./packages/ui/src/*"],
			"@package/app/*": ["./packages/app/src/*"],
			"@package/scanner/*": ["./packages/scanner/src/*"],
			"@package/secure-store/*": ["./packages/secure-store/*"],
			"@package/utils/*": ["./packages/utils/src/*"],
			"@easypid/*": ["./apps/easypid/src/*"]
		}
	},
	"exclude": ["node_modules", "build"]
}
