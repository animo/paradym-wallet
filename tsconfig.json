{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"strict": true,
		"noEmitOnError": true,
		"baseUrl": ".",
		"types": ["png"],
		"skipLibCheck": true,
		"typeRoots": ["./types"],
		"paths": {
			"@package/*": ["./packages/*/src"],
			"@package/ui/*": ["./packages/ui/src/*"],
			"@package/app/*": ["./packages/app/src/*"],
			"@package/scanner/*": ["./packages/scanner/src/*"],
			"@package/utils/*": ["./packages/utils/src/*"],
			"@easypid/*": ["./apps/easypid/src/*"],
			"@paradym/wallet-sdk/*": ["./packages/sdk/src/*"]
		}
	},
	"exclude": ["node_modules", "build"]
}
