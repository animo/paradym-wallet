{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2017",
		"declaration": true,
		"sourceMap": true,
		"strict": true,
		"noEmitOnError": true,
		"lib": ["ESNext"],
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"baseUrl": ".",
		"skipLibCheck": true,
		"jsx": "react-native",
		"typeRoots": ["./types"],
		"paths": {
			"@package/*": ["./packages/*"],
			"@funke/*": ["./apps/funke/src/*"],
			"@paradym/*": ["./apps/paradym/*"]
		}
	},
	"exclude": ["node_modules", "build"]
}
