{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "paths": {
      "app/*": ["./packages/app/*"],
      "@internal/ui/*": ["./packages/ui/*"],
      "@internal/agent/*": ["./packages/agent/src/*"],
      "@internal/scanner/*": ["./packages/scanner/src/*"]
    }
  },
  "include": [
    ".eslintrc.js",
    "**/*.js",
    "*.js",
    "**/*.jsx",
    "*.jsx",
    "**/*.ts",
    "*.ts",
    "**/*.tsx",
    "*.tsx"
  ]
}
